<%- include('partials/header', { 
  user: typeof user !== 'undefined' ? user : null,
  products: typeof products !== 'undefined' ? products : [],
  searchQuery: typeof searchQuery !== 'undefined' ? searchQuery : null,
  selectedCategory: typeof selectedCategory !== 'undefined' ? selectedCategory : null,
  categories: typeof categories !== 'undefined' ? categories : []
}) %>

<style>

  .pagination {
  margin-top: 30px;
}

.page-item.active .page-link {
  background-color: #007bff;
  border-color: #007bff;
}

.page-link {
  color: #007bff;
}
</style>

<div class="row mb-4">
  <div class="col-md-3">
    <div class="card">
      <div class="card-header">
        <h5 class="text-center" >Categories</h5>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item">
            <a href="/search" class="text-decoration-none">All Categories</a>
          </li>
          <% categories.forEach(category => { %>
            <li class="list-group-item <%= selectedCategory === category ? 'active' : '' %>">
              <a href="/search?category=<%= category %>" class="text-decoration-none"><%= category %></a>

            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <% if (searchQuery) { %>
      <h4>Search Results for "<%= searchQuery %>"</h4>
    <% } else { %>
      <h4><i class="bi bi-arrow-right-circle-fill text-primary"></i> Latest Products</h4>
    <% } %>
    
    <div class="row">
      <% if (products.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info">No products found</div>
        </div>
      <% } else { %>
        <% products.forEach(product => { %>
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <img src="/uploads/<%= product.image %>" class="card-img-top product-image mx-auto" alt="<%= product.title %>">
              <hr>
               <small class="text-muted float-end mx-auto"><i class="bi bi-file-earmark-post-fill"></i> Posted by <%= product.user_name %></small>
              <div class="card-body">
                
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text text-muted"><%= product.category %></p>
                <!-- <p class="card-text"><%= product.description.substring(0, 100) %>...</p> -->
                <p class="card-text" style="color: rgb(25, 211, 32);" ><strong>Price: â‚¹<%= product.price %></strong></p>
              </div>
              <div class="card-footer bg-white">
                <a href="/products/<%= product.id %>" class="btn btn-warning btn-sm  fw-bold">View Details</a>
              </div>
               
            </div>
          </div>
        <% }) %>
      <% } %>
      <!-- Existing product display code -->
<div class="row">
  <% if (products.length === 0) { %>
    <div class="col-12">
      <div class="alert alert-info">No products found</div>
    </div>
  <% } else { %>
    <% products.forEach(product => { %>
      <div class="col-md-4 mb-4">
        <!-- Product card remains the same -->
      </div>
    <% }) %>
  <% } %>
</div>

<!-- Pagination controls -->
<% if (pagination.totalPages > 1) { %>
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if (pagination.page > 1) { %>
        <li class="page-item">
          <a class="page-link" href="/?page=<%= pagination.page - 1 %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
      <% } %>

      <% for (let i = 1; i <= pagination.totalPages; i++) { %>
        <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
          <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>

      <% if (pagination.page < pagination.totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="/?page=<%= pagination.page + 1 %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      <% } %>
    </ul>
  </nav>
<% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>