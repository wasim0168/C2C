<%- include('partials/header', { 
  user: typeof user !== 'undefined' ? user : null,
  products: typeof products !== 'undefined' ? products : [],
  searchQuery: typeof searchQuery !== 'undefined' ? searchQuery : null,
  selectedCategory: typeof selectedCategory !== 'undefined' ? selectedCategory : null,
  categories: typeof categories !== 'undefined' ? categories : []
}) %>

<style>
  :root {
    --primary-color: #254c63;
    --secondary-color: #EF990F;
    --dark-color: #2C2C2C;
    --success-color: #28a745;
    --light-gray: #f8f9fa;
  }
  
  .main-container {
    padding: 1rem;
    max-width: 1800px;
    margin: 0 auto;
  }
  
  .page-header {
    color: var(--primary-color);
    margin: 0 1rem 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid var(--secondary-color);
    font-size: 1.5rem;
    font-weight: 600;
    display: inline-block;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.2rem;
    padding: 0 1rem;
  }
  
  .product-card {
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    overflow: hidden;
    background: white;
    display: flex;
    flex-direction: column;
    height: 100%;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    border-color: rgba(239, 153, 15, 0.2);
  }
  
  .product-image-container {
    height: 160px;
    background: var(--light-gray);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    border-bottom: 1px solid #eee;
    position: relative;
    overflow: hidden;
  }
  
  .product-image {
    max-height: 100%;
    max-width: 100%;
    object-fit: contain;
    transition: transform 0.4s ease;
    mix-blend-mode: multiply;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.08);
  }
  
  .product-body {
    padding: 1rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .product-title {
    font-size: 0.95rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--dark-color);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 2.5rem;
    line-height: 1.3;
  }
  
  .product-category {
    font-size: 0.75rem;
    color: #6c757d;
    margin-bottom: 0.6rem;
    display: flex;
    align-items: center;
  }
  
  .product-category i {
    font-size: 0.8rem;
    margin-right: 0.3rem;
    color: var(--secondary-color);
  }
  
  .product-price {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--success-color);
    margin: 0.3rem 0 0.8rem;
  }
  
  .product-seller {
    font-size: 0.7rem;
    color: #6c757d;
    margin-top: auto;
    display: flex;
    align-items: center;
  }
  
  .product-seller i {
    font-size: 0.8rem;
    margin-right: 0.3rem;
    color: var(--primary-color);
  }
  
  .view-details-btn {
    background-color: var(--secondary-color);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 0.5rem;
    font-weight: 500;
    font-size: 0.85rem;
    transition: all 0.3s ease;
    text-align: center;
    display: block;
    margin: 0 1rem 1rem;
  }
  
  .view-details-btn:hover {
    background-color: #d5810e;
    transform: translateY(-2px);
    box-shadow: 0 3px 8px rgba(239, 153, 15, 0.3);
  }
  
  .view-details-btn i {
    margin-right: 0.3rem;
  }
  
  .empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem 0;
  }
  
  /* Pagination */
  .pagination-container {
    margin-top: 2.5rem;
    padding: 0 1rem;
  }
  
  .page-item.active .page-link {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
  }
  
  .page-link {
    color: var(--primary-color);
    font-size: 0.9rem;
    padding: 0.4rem 0.75rem;
  }
  
  /* Responsive Adjustments */
  @media (min-width: 1600px) {
    .products-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }
  
  @media (max-width: 1599px) and (min-width: 1200px) {
    .products-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }
  
  @media (max-width: 1199px) and (min-width: 992px) {
    .products-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  @media (max-width: 991px) and (min-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 767px) and (min-width: 576px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 575px) {
    .products-grid {
      grid-template-columns: 1fr;
    }
    
    .product-image-container {
      height: 180px;
    }
  }
</style>

<div class="main-container">
  <% if (searchQuery) { %>
    <h2 class="page-header"><i class="bi bi-search me-2"></i>Search results for "<%= searchQuery %>"</h2>
  <% } else { %>
    <h2 class="page-header"><i class="bi bi-lightning-charge-fill me-2"></i>Latest Products</h2>
  <% } %>

  <div class="products-grid">
    <% if (products.length === 0) { %>
      <div class="empty-state">
        <div class="alert alert-info py-3 px-4">
          <i class="bi bi-info-circle-fill me-2"></i>No products found
        </div>
      </div>
    <% } else { %>
      <% products.forEach(product => { %>
        <div class="product-card">
          <div class="product-image-container">
            <img src="/uploads/<%= product.image %>" class="product-image" alt="<%= product.title %>">
          </div>
          <div class="product-body">
            <h5 class="product-title"><%= product.title %></h5>
            <p class="product-category"><i class="bi bi-tag-fill"></i><%= product.category %></p>
            <p class="product-price">â‚¹<%= product.price.toLocaleString() %></p>
            <p class="product-seller"><i class="bi bi-person-fill"></i><%= product.user_name %></p>
          </div>
          <a href="/products/<%= product.id %>" class="view-details-btn">
            <i class="bi bi-eye-fill"></i>View Details
          </a>
        </div>
      <% }) %>
    <% } %>
  </div>
  
  <% if (pagination.totalPages > 1) { %>
  <div class="pagination-container">
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (pagination.page > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/?page=<%= pagination.page - 1 %>">&laquo;</a>
          </li>
        <% } %>

        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
          <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
            <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <% if (pagination.page < pagination.totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="/?page=<%= pagination.page + 1 %>">&raquo;</a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
  <% } %>
</div>

<%- include('partials/footer') %>