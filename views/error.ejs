<%- include('partials/header', { categories: [] }) %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-<%= status === 404 ? 'warning' : 'danger' %>">
        <div class="card-header bg-<%= status === 404 ? 'warning' : 'danger' %> text-white">
          <h1 class="display-4 mb-0">
            <% if (status === 400) { %>
              Invalid Request
            <% } else if (status === 404) { %>
              Product Not Found
            <% } else { %>
              Error <%= status %>
            <% } %>
          </h1>
        </div>
        <div class="card-body">
          <div class="text-center">
            <i class="bi bi-<%= status === 404 ? 'exclamation-triangle' : 'exclamation-octagon' %>-fill display-4 text-<%= status === 404 ? 'warning' : 'danger' %> mb-3"></i>
            <h3><%= message %></h3>
            
            <% if (status === 400) { %>
              <p class="mt-3">Please check your request and try again.</p>
            <% } else if (status === 404) { %>
              <p class="mt-3">The requested resource could not be found.</p>
            <% } %>
          </div>

          <div class="mt-4 text-center">
            <a href="/" class="btn btn-primary me-2">
              <i class="bi bi-house"></i> Home
            </a>
            <% if (user) { %>
              <a href="/profile" class="btn btn-outline-primary me-2">
                <i class="bi bi-person"></i> My Profile
              </a>
            <% } %>
            <% if (showSearch) { %>
              <a href="/products" class="btn btn-success">
                <i class="bi bi-search"></i> Browse Products
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>