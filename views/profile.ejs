<%- include('partials/header', { user, message}) %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
  /* Modern UI Enhancements */
  :root {
    --primary-color: #4e73df;
    --secondary-color: #858796;
    --success-color: #1cc88a;
    --warning-color: #f6c23e;
    --danger-color: #e74a3b;
    --light-color: #f8f9fc;
    --dark-color: #5a5c69;
  }
  
  body {
    background-color: #f8f9fc;
    font-family: 'Nunito', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  .card {
    border: none;
    border-radius: 0.35rem;
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    transition: all 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1.5rem 0 rgba(58, 59, 69, 0.2);
  }
  
  .card-header {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .product-img-container {
    height: 200px;
    overflow: hidden;
    position: relative;
  }
  
  .product-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .card:hover .product-img {
    transform: scale(1.05);
  }
  
  .badge {
    font-weight: 500;
    padding: 0.35em 0.65em;
  }
  
  .btn {
    border-radius: 0.25rem;
    font-weight: 600;
  }
  
  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
  }
  
  .alert {
    border-radius: 0.35rem;
  }
  
  .progress {
    height: 0.5rem;
    border-radius: 0.25rem;
  }
  
  .progress-bar {
    background-color: var(--primary-color);
  }
  
  .card.inactive {
    position: relative;
    opacity: 0.85;
  }
  
  .card.inactive::after {
    content: "INACTIVE";
    position: absolute;
    top: 10px;
    left: -5px;
    background: var(--danger-color);
    color: white;
    padding: 0.25rem 1rem;
    font-size: 0.75rem;
    font-weight: bold;
    transform: rotate(-5deg);
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  }
  
  .status-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    z-index: 1;
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  @media (max-width: 767.98px) {
    .product-img-container {
      height: 150px;
    }
    
    .col-md-6, .col-lg-4 {
      padding: 0 8px;
    }
    
    .row {
      margin: 0 -8px;
    }
  }
  
  @media (max-width: 575.98px) {
    .container {
      padding-left: 15px;
      padding-right: 15px;
    }
    
    .product-img-container {
      height: 180px;
    }
  }
</style>

<div class="container my-4">
  <% if (message) { %>
    <div class="alert alert-<%= message.type %> alert-dismissible fade show">
      <%= message.text %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <div class="row">
    <!-- Profile Card -->
    <div class="col-lg-4 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-warning text-black">
          <h5 class="text-center fw-bold mb-0"><i class="fas fa-user-circle me-2"></i> My Profile</h5>
        </div>
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <i class="fas fa-user me-3 text-primary"></i>
            <div>
              <h6 class="mb-0">Name</h6>
              <p class="mb-0"><%= user.name %></p>
            </div>
          </div>
          
          <div class="d-flex align-items-center mb-3">
            <i class="fas fa-envelope me-3 text-primary"></i>
            <div>
              <h6 class="mb-0">Email</h6>
              <p class="mb-0"><%= user.email %></p>
            </div>
          </div>
          
          <% if (user.plan_id) { 
            const userPlan = plans.find(p => p.id === user.plan_id);
            const planName = userPlan ? userPlan.name : 'Unknown Plan';
          %>
            <hr>
            <div class="d-flex align-items-center mb-3">
              <i class="fas fa-crown me-3 text-warning"></i>
              <div>
                <h6 class="mb-0">Current Plan</h6>
                <p class="mb-0" id="current-plan"><%= planName %></p>
              </div>
            </div>

             <div class="d-flex align-items-center mb-3">
               <i class="bi bi-hourglass-split fs-5 text-primary me-3"></i>
              <div>
                <h6 class="mb-0">Remaining Slots</h6>
                <p class="mb-0" id="current-plan"><%= remainingSlots %></p>
              </div>
            </div>
             <div class="d-flex align-items-center mb-3">
              <i class="bi bi-check-circle-fill fs-5 text-success me-3"></i>
              <div>
                <h6 class="mb-0">Approved Products</h6>
                <p class="mb-0" id="current-plan"><%= approvedProducts.length %></p>
              </div>
            </div>
            <div class="d-flex align-items-center mb-3">
               <i class="bi bi-clock-fill fs-5 text-warning me-3"></i>
              <div>
                <h6 class="mb-0">Pending Products</h6>
                <p class="mb-0" id="current-plan"><%= pendingProducts.length %></p>
              </div>
            </div>
            
            <div class="d-flex justify-content-between mb-1">
              <span><i class="fas fa-box-open me-2 text-muted"></i> Products</span>
              <span><%= approvedProducts.length %>/<%= productLimit %></span>
            </div>
            
            <div class="progress mb-3">
              <div class="progress-bar bg-gradient-success" role="progressbar" 
                   style="width: <%= Math.min(100, (approvedProducts.length/productLimit)*100) %>%"></div>
            </div>
            
            
            <div class="d-grid gap-2">
              <a href="/messages" class="btn btn-outline-primary position-relative">
                <i class="fas fa-envelope me-2"></i> Messages
                <% if (unreadCount > 0) { %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <%= unreadCount %>
                  </span>
                <% } %>
              </a>
              
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#upgradePlanModal">
                <i class="fas fa-arrow-up me-2"></i> Upgrade Plan
              </button>
            </div>
          <% } else { %>
            <div class="alert alert-warning mt-3">
              <i class="fas fa-exclamation-circle me-2"></i>
              You need to select a plan to start selling products.
             <a href="/plans/select" class="btn btn-primary">Select</a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <!-- Products Section -->
    <div class="col-lg-8">
      <!-- Approved Products -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
          <h5 class="mb-0"><i class="fas fa-check-circle text-success me-2"></i> Approved Products</h5>
          <a href="/products/create" id="addProductBtn" class="btn btn-primary btn-sm <%= approvedProducts.length >= productLimit ? 'disabled' : '' %>">
            <i class="fas fa-plus me-1"></i> Add Product
          </a>
        </div>
        <div class="card-body">
          <% if (approvedProducts.length === 0) { %>
            <div class="text-center py-4">
              <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No approved products yet</h5>
              <p class="text-muted">Create your first product to get started</p>
            </div>
          <% } else { %>
            <div class="row g-3">
              <% approvedProducts.forEach(product => { %>
                <div class="col-sm-6 col-md-4">
                  <div class="card h-100 <%= !product.is_active ? 'inactive' : '' %>">
                    <div class="product-img-container">
                      <img src="/uploads/<%= product.image %>" class="product-img" alt="<%= product.title %>">
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-truncate"><%= product.title %></h5>
                      <p class="card-text text-muted small mb-2"><%= product.description.substring(0, 60) %>...</p>
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="h5 text-primary mb-0">â‚¹<%= product.price %></span>
                        <span class="badge bg-light text-dark"><%= product.category %></span>
                      </div>
                      <% if (!product.is_active) { %>
                        <div class="alert alert-warning py-1 px-2 small mb-0">
                          <i class="fas fa-exclamation-triangle me-1"></i> Currently inactive
                        </div>
                      <% } %>
                    </div>
                    <div class="card-footer bg-white d-flex justify-content-between py-2">
                      <a href="/products/<%= product.id %>/edit" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/products/<%= product.id %>/delete" method="POST" class="d-inline delete-product-form">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Pending Products -->
      <% if (pendingProducts.length > 0) { %>
        <div class="card shadow-sm">
          <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0"><i class="fas fa-hourglass-half text-warning me-2"></i> Pending Approval</h5>
            <span class="badge bg-warning text-dark">
              <%= pendingProducts.length %> waiting
            </span>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <% pendingProducts.forEach(product => { %>
                <div class="col-sm-6 col-md-4">
                  <div class="card h-100 <%= !product.is_active ? 'inactive' : '' %>">
                    <div class="product-img-container">
                      <img src="/uploads/<%= product.image %>" class="product-img" alt="<%= product.title %>">
                      <span class="status-badge badge bg-warning text-dark">
                        <i class="fas fa-hourglass-half me-1"></i> Pending
                      </span>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-truncate"><%= product.title %></h5>
                      <p class="card-text text-muted small mb-2"><%= product.description.substring(0, 60) %>...</p>
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="h5 text-primary mb-0">â‚¹<%= product.price %></span>
                        <span class="badge bg-light text-dark"><%= product.category %></span>
                      </div>
                      <% if (!product.is_active) { %>
                        <div class="alert alert-warning py-1 px-2 small mb-0">
                          <i class="fas fa-exclamation-triangle me-1"></i> Currently inactive
                        </div>
                      <% } %>
                    </div>
                    <div class="card-footer bg-white d-flex justify-content-between py-2">
                      <a href="/products/<%= product.id %>/edit" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/products/<%= product.id %>/delete" method="POST" class="d-inline delete-product-form">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Upgrade Plan Modal -->
<div class="modal fade" id="upgradePlanModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-gradient-primary text-white">
        <h5 class="modal-title"><i class="fas fa-crown me-2"></i> Upgrade Your Plan</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row g-3">
          <% plans.forEach(plan => { 
            const canSelect = !user.plan_id || (user.plan_id !== plan.id && approvedProducts.length <= plan.max_products);
          %>
            <div class="col-md-6">
              <div class="card h-100 border-<%= user.plan_id === plan.id ? 'primary' : 'light' %>">
                <div class="card-header text-center py-3 bg-<%= user.plan_id === plan.id ? 'primary' : 'light' %> text-<%= user.plan_id === plan.id ? 'white' : 'dark' %>">
                  <h4 class="my-0 fw-normal"><%= plan.name %></h4>
                </div>
                <div class="card-body text-center">
                  <h1 class="card-title pricing-card-title">â‚¹<%= plan.price %></h1>
                  <ul class="list-unstyled mt-3 mb-4">
                    <li class="mb-2">
                      <i class="bi <%= canSelect ? 'bi-check-circle-fill text-success' : 'bi-exclamation-circle-fill text-danger' %> me-2"></i>
                      Max <%= plan.max_products %> products
                    </li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Unlimited duration</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Priority support</li>
                  </ul>
                  <button class="btn btn-lg w-100 select-plan <%= user.plan_id === plan.id ? 'btn-secondary' : canSelect ? 'btn-primary' : 'btn-outline-secondary' %>"
                          data-plan-id="<%= plan.id %>"
                          data-plan-name="<%= plan.name %>"
                          data-max-products="<%= plan.max_products %>"
                          <%= user.plan_id === plan.id ? 'disabled' : !canSelect ? 'disabled data-disabled-reason="Delete ' + (approvedProducts.length - plan.max_products) + ' products first"' : '' %>>
                    <% if (user.plan_id === plan.id) { %>
                      <i class="fas fa-check-circle me-2"></i> Current Plan
                    <% } else if (!canSelect) { %>
                      <i class="fas fa-times-circle me-2"></i> Not Available
                    <% } else { %>
                      <i class="fas fa-arrow-up me-2"></i> Upgrade Now
                    <% } %>
                  </button>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Toast Notifications -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
  <div id="paymentToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header bg-success text-white">
      <strong class="me-auto"><i class="fas fa-check-circle me-2"></i> Success</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body"></div>
  </div>
  <div id="errorToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header bg-danger text-white">
      <strong class="me-auto"><i class="fas fa-exclamation-circle me-2"></i> Error</strong>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
    </div>
    <div class="toast-body"></div>
  </div>
</div>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize toasts
  const paymentToast = new bootstrap.Toast(document.getElementById('paymentToast'));
  const errorToast = new bootstrap.Toast(document.getElementById('errorToast'));
  
  // Plan Upgrade Handler
  document.querySelectorAll('#upgradePlanModal .btn').forEach(button => {
    button.addEventListener('click', async function() {
      // Only handle buttons that have data-plan-id attribute
      if (!this.hasAttribute('data-plan-id') || this.disabled) {
        if (this.hasAttribute('data-disabled-reason')) {
          showToast(this.getAttribute('data-disabled-reason'), 'error');
        }
        return;
      }

      const planId = this.getAttribute('data-plan-id');
      const planName = this.getAttribute('data-plan-name');
      const maxProducts = parseInt(this.getAttribute('data-max-products'));
      
      // Show loading state
      const originalText = this.innerHTML;
      this.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Processing...';
      this.disabled = true;
      
      try {
        // Close modal before opening Razorpay
        const modal = bootstrap.Modal.getInstance(document.getElementById('upgradePlanModal'));
        if (modal) modal.hide();

        // Create Razorpay order
        const response = await fetch('/create-razorpay-order', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ plan_id: planId })
        });
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const order = await response.json();
        
        if (order.error) {
          throw new Error(order.error);
        }

        // Initialize Razorpay
        const options = {
          key: '<%= process.env.RAZORPAY_KEY_ID %>',
          amount: order.amount,
          currency: 'INR',
          name: 'Your App Name',
          description: `Upgrade to ${planName} Plan`,
          order_id: order.id,
          handler: async function(response) {
    try {
      const verification = await fetch('/verify-payment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          razorpay_payment_id: response.razorpay_payment_id,
          razorpay_order_id: response.razorpay_order_id,
          razorpay_signature: response.razorpay_signature,
          plan_id: planId,
          max_products: maxProducts
        })
      });
      
      const result = await verification.json();
      
      if (!result.success) {
        throw new Error(result.message || 'Payment verification failed');
      }
      
      // Show success message
      showToast('Payment successful! Plan upgraded.', 'success');
      
      // Refresh page after 2 seconds
      setTimeout(() => location.reload(), 2000);
      
    } catch (error) {
      console.error('Payment error:', error);
      showToast(error.message || 'Payment failed. Please try again.', 'error');
    }
  },
  modal: {
    ondismiss: function() {
      showToast('Payment cancelled by user', 'warning');
    }
  }
};

        
        const rzp = new Razorpay(options);
        rzp.open();
        
      } catch (error) {
        console.error('Error:', error);
        showToast(error.message || 'Failed to initiate payment', 'error');
      } finally {
        // Reset button state
        this.innerHTML = originalText;
        this.disabled = false;
      }
    });
  });

  // Product Deletion Handler
  document.querySelectorAll('.delete-product-form').forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      if (!confirm('Are you sure you want to delete this product?')) return;
      
      const deleteBtn = this.querySelector('button[type="submit"]');
      const originalText = deleteBtn.innerHTML;
      deleteBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>';
      deleteBtn.disabled = true;
      
      try {
        const response = await fetch(this.action, {
          method: 'POST',
          headers: { 'Accept': 'application/json' }
        });
        
        const result = await response.json();
        
        if (result.success) {
          // Remove product card
          this.closest('.col-sm-6').remove();
          
          // Show success
          showToast('Product deleted successfully', 'success');
          
          // Refresh page after 1 second
          setTimeout(() => location.reload(), 1000);
        } else {
          throw new Error(result.message || 'Failed to delete product');
        }
      } catch (error) {
        console.error('Delete error:', error);
        showToast(error.message, 'error');
      } finally {
        deleteBtn.innerHTML = originalText;
        deleteBtn.disabled = false;
      }
    });
  });
  
  // Show toast notification
  function showToast(message, type = 'success') {
    const toastEl = type === 'success' ? paymentToast : errorToast;
    const toastBody = toastEl._element.querySelector('.toast-body');
    
    toastBody.textContent = message;
    toastEl.show();
  }
});
</script>

<%- include('partials/footer') %>