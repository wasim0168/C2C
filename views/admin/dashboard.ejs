<%- include('../partials/admin-header', { admin }) %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <style>
     :root {
      --primary: #4e73df;
      --primary-light: #f8f9fc;
      --success: #1cc88a;
      --info: #36b9cc;
      --warning: #f6c23e;
      --danger: #e74a3b;
      --dark: #5a5c69;
      --light: #f8f9fc;
      --sidebar-width: 250px;
      --sidebar-collapsed-width: 80px;
    }
    
    body {
      font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background-color: var(--light);
      overflow-x: hidden;
    }
    
    /* Sidebar */
    .sidebar {
      width: var(--sidebar-width);
      min-height: 100vh;
      background: linear-gradient(180deg, var(--primary) 10%, #224abe 100%);
      transition: all 0.3s ease;
      position: fixed;
      z-index: 1000;
      overflow-y: auto;
    }
    
    .sidebar-collapsed {
      width: var(--sidebar-collapsed-width);
    }
    
    .sidebar-collapsed .sidebar-brand h3,
    .sidebar-collapsed .nav-link span {
      display: none;
    }
    
    .sidebar-collapsed .nav-link {
      text-align: center;
      padding: 1rem 0.5rem;
    }
    
    .sidebar-collapsed .nav-link i {
      margin-right: 0;
      font-size: 1.25rem;
    }
    
    .sidebar .sidebar-brand {
      height: 4.375rem;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      color: white;
      text-decoration: none;
    }
    
    .sidebar .nav-link {
      color: rgba(255, 255, 255, 0.8);
      padding: 0.75rem 1rem;
      font-weight: 600;
      border-left: 0.25rem solid transparent;
      display: flex;
      align-items: center;
      white-space: nowrap;
      transition: all 0.3s;
    }
    
    .sidebar .nav-link:hover {
      color: white;
      background: rgba(255, 255, 255, 0.1);
    }
    
    .sidebar .nav-link.active {
      color: white;
      border-left: 0.25rem solid white;
      background: rgba(255, 255, 255, 0.1);
    }
    
    .sidebar .nav-link i {
      margin-right: 0.5rem;
      transition: all 0.3s;
    }
    
    .sidebar .nav-item.logout {
      position: sticky;
      bottom: 0;
      background-color: rgba(0,0,0,0.2);
      backdrop-filter: blur(5px);
    }
    
    /* Main Content */
    .main-content {
      margin-left: var(--sidebar-width);
      width: calc(100% - var(--sidebar-width));
      min-height: 100vh;
      transition: all 0.3s ease;
    }
    
    .main-content-expanded {
      margin-left: var(--sidebar-collapsed-width);
      width: calc(100% - var(--sidebar-collapsed-width));
    }
    
    /* Responsive Adjustments */
    @media (max-width: 992px) {
      .sidebar {
        transform: translateX(-100%);
        width: var(--sidebar-width);
      }
      
      .sidebar.active {
        transform: translateX(0);
      }
      
      .main-content {
        width: 100%;
        margin-left: 0;
      }
      
      .sidebar-collapse-btn {
        display: block !important;
      }
    }
    
    @media (min-width: 993px) and (max-width: 1200px) {
      .sidebar {
        width: var(--sidebar-collapsed-width);
      }
      
      .sidebar .sidebar-brand h3,
      .sidebar .nav-link span {
        display: none;
      }
      
      .sidebar .nav-link {
        text-align: center;
        padding: 1rem 0.5rem;
      }
      
      .sidebar .nav-link i {
        margin-right: 0;
        font-size: 1.25rem;
      }
      
      .main-content {
        margin-left: var(--sidebar-collapsed-width);
        width: calc(100% - var(--sidebar-collapsed-width));
      }
      
      .sidebar:hover {
        width: var(--sidebar-width);
      }
      
      .sidebar:hover .sidebar-brand h3,
      .sidebar:hover .nav-link span {
        display: inline;
      }
      
      .sidebar:hover .nav-link {
        text-align: left;
        padding: 0.75rem 1rem;
      }
      
      .sidebar:hover .nav-link i {
        margin-right: 0.5rem;
      }
    }
    
    /* Sidebar Toggle Button */
    .sidebar-collapse-btn {
      display: none;
      cursor: pointer;
      background: none;
      border: none;
      color: var(--dark);
      font-size: 1.5rem;
    }
    
    /* Overlay for mobile */
    .sidebar-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0,0,0,0.5);
      z-index: 999;
      display: none;
    }
    
    .sidebar-overlay.active {
      display: block;
    }
  </style>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
      <div class="sidebar-brand d-flex align-items-center justify-content-center py-4">
        <h3 class="text-white">Admin Panel</h3>
      </div>
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="/admin/dashboard">
              <i class="bi bi-speedometer2"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/users">
              <i class="bi bi-people"></i> Users
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/products/pending">
              <i class="bi bi-card-checklist"></i> Product Approvals
            </a>
          </li>
          
          <!-- Add other menu items similarly -->
          <li class="nav-item logout">
            <a class="nav-link" href="/admin/logout">
              <i class="bi bi-box-arrow-left"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </nav>
    
    <!-- Main Content -->
    <div id="main-content" class="main-content">
      <!-- Top Navigation -->
      <nav class="navbar navbar-expand topbar mb-4 static-top">
        <div class="container-fluid">
          <button id="sidebarToggle" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="bi bi-list"></i>
          </button>
          
          <h1 class="h3 mb-0 text-gray-800">Dashboard Overview</h1>
          
          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown no-arrow">
              <a class="nav-link" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                <span class="mr-1 d-none d-lg-inline text-gray-600 small fw-bold"><%= admin.name %></span>
                <i class="bi bi-person-circle fs-4"></i>
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Begin Page Content -->
      <div class="container-fluid content-wrapper">
        <!-- Stats Cards -->
        <div class="row fade-in">
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-primary text-white shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                        Total Users</div>
                    <div class="h5 mb-0 font-weight-bold"><%= counts.users %></div>
                  </div>
                  <div class="col-auto">
                    <i class="bi bi-people fs-2"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-success text-white shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                        Active Products</div>
                    <div class="h5 mb-0 font-weight-bold"><%= counts.activeProducts %></div>
                  </div>
                  <div class="col-auto">
                    <i class="bi bi-check-circle fs-2"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-info text-white shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                        Pending Approvals</div>
                    <div class="h5 mb-0 font-weight-bold"><%= counts.pendingProducts %></div>
                  </div>
                  <div class="col-auto">
                    <i class="bi bi-hourglass-split fs-2"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card bg-warning text-white shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                        Recent Activity</div>
                    <div class="h5 mb-0 font-weight-bold">24</div>
                  </div>
                  <div class="col-auto">
                    <i class="bi bi-activity fs-2"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Charts Section -->
        <div class="row fade-in">
          <div class="col-lg-6 mb-4">
            <div class="card shadow">
              <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">User Registrations (Last 30 Days)</h6>
              </div>
              <div class="card-body">
                <div class="chart-area">
                  <canvas id="usersChart"></canvas>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-lg-6 mb-4">
            <div class="card shadow">
              <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Product Listings (Last 30 Days)</h6>
              </div>
              <div class="card-body">
                <div class="chart-area">
                  <canvas id="productsChart"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Recent Activity Section -->
         
      </div>
    </div>
  </div>

  <!-- users -->
   

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Toggle sidebar on mobile
    document.getElementById('sidebarToggle').addEventListener('click', function() {
      document.getElementById('sidebar').classList.toggle('active');
      document.getElementById('main-content').classList.toggle('active');
    });

    // Initialize charts only if data exists
    document.addEventListener('DOMContentLoaded', function() {
      // Users Chart
      if (typeof charts !== 'undefined' && charts.users && charts.users.length > 0) {
        const usersCtx = document.getElementById('usersChart').getContext('2d');
        new Chart(usersCtx, {
          type: 'line',
          data: {
            labels: charts.users.map(item => new Date(item.date).toLocaleDateString()),
            datasets: [{
              label: 'Users',
              data: charts.users.map(item => item.count),
              borderColor: 'rgba(78, 115, 223, 1)',
              backgroundColor: 'rgba(78, 115, 223, 0.05)',
              pointBackgroundColor: 'rgba(78, 115, 223, 1)',
              pointBorderColor: '#fff',
              pointHoverRadius: 5,
              pointHoverBackgroundColor: 'rgba(78, 115, 223, 1)',
              pointHoverBorderColor: '#fff',
              pointHitRadius: 10,
              pointBorderWidth: 2,
              fill: true,
              tension: 0.3
            }]
          },
          options: {
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: false
              }
            },
            scales: {
              x: {
                grid: {
                  display: false
                }
              },
              y: {
                beginAtZero: true,
                ticks: {
                  precision: 0
                }
              }
            }
          }
        });
      } else {
        console.warn('Users chart data not available');
        document.getElementById('usersChart').closest('.card').style.display = 'none';
      }

      // Products Chart
      if (typeof charts !== 'undefined' && charts.products && charts.products.length > 0) {
        const productsCtx = document.getElementById('productsChart').getContext('2d');
        new Chart(productsCtx, {
          type: 'bar',
          data: {
            labels: charts.products.map(item => new Date(item.date).toLocaleDateString()),
            datasets: [{
              label: 'Products',
              data: charts.products.map(item => item.count),
              backgroundColor: 'rgba(54, 162, 235, 0.7)',
              borderColor: 'rgba(54, 162, 235, 1)',
              borderWidth: 1,
              hoverBackgroundColor: 'rgba(54, 162, 235, 1)'
            }]
          },
          options: {
            maintainAspectRatio: false,
            plugins: {
              legend: {
                display: false
              }
            },
            scales: {
              x: {
                grid: {
                  display: false
                }
              },
              y: {
                beginAtZero: true,
                ticks: {
                  precision: 0
                }
              }
            }
          }
        });
      } else {
        console.warn('Products chart data not available');
        document.getElementById('productsChart').closest('.card').style.display = 'none';
      }
    });
  </script>
</body>
</html>

