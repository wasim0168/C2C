<%- include('../../partials/admin-header', { admin, activePage: 'products' }) %>

<div class="container-fluid">
  <div class="row">
    <%- include('../../partials/admin-sidebar', { activePage: 'products' }) %>

    <main class="col-md-9 ms-sm-auto px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Flagged Products</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/admin/products/pending" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Approvals
          </a>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Product</th>
              <th>Reports</th>
              <th>Seller</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
              <tr>
                <td>
                  <a href="/products/<%= product.id %>" class="text-decoration-none">
                    <img src="/uploads/<%= product.image %>" width="50" height="50" class="rounded me-2">
                    <%= product.title %>
                  </a>
                </td>
                <td><%= product.report_count %></td>
                <td><%= product.user_name %></td>
                <td>
                  <span class="badge <%= product.is_active ? 'bg-success' : 'bg-danger' %>">
                    <%= product.is_active ? 'Active' : 'Removed' %>
                  </span>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/admin/reports?product_id=<%= product.id %>" class="btn btn-outline-primary">
                      <i class="bi bi-eye"></i> View Reports
                    </a>
                    <form action="/admin/products/<%= product.id %>/toggle-status" method="POST" class="d-inline">
                      <button type="submit" class="btn <%= product.is_active ? 'btn-outline-danger' : 'btn-outline-success' %>">
                        <i class="bi <%= product.is_active ? 'bi-trash' : 'bi-arrow-counterclockwise' %>"></i>
                        <%= product.is_active ? 'Remove' : 'Restore' %>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>

<%- include('../../partials/admin-footer') %>