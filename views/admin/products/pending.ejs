<%- include('../../partials/admin-header', { admin, activePage: 'products' }) %>

<div class="container-fluid">
  <div class="row">
    <%- include('../../partials/admin-sidebar', { activePage: 'products' }) %>

    <main class="col-md-9 ms-sm-auto px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Pending Product Approvals</h1>
      </div>

      <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <% if (products.length === 0) { %>
        <div class="alert alert-info">
          No products pending approval.
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Category</th>
                <th>Seller</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <!-- views/admin/products/pending.ejs -->
<% products.forEach(product => { %>
  <div class="card mb-3">
    <div class="card-body">
      <h5><%= product.title %></h5>
      <p>Posted by: <%= product.user_name %> (<%= product.user_email %>)</p>
      <p>Price: â‚¹<%= product.price %></p>
      <p>Category: <%= product.category_name %></p>
      <p>Status: <span class="badge bg-warning">Pending Approval</span></p>
      <p>Description: <%= product.description %></p>
      <p>Posted on: <%= new Date(product.created_at).toLocaleDateString() %></p>
      <p>Images: 
        <% if (product.images && product.images.length > 0) { %>
          <ul class="list-unstyled">
            <% product.images.forEach(image => { %>
              <li><img src="<%= image.url %>" alt="Product Image" class="img-thumbnail" style="max-width: 100px;"></li>
            <% }) %>
          </ul>
        <% } else { %>
          <span class="text-muted">No images available</span>
        <% } %> 
      <div class="btn-group">
        <form action="/admin/products/<%= product.id %>/approve" method="POST">
          <button type="submit" class="btn btn-success">Approve</button>
        </form>
        <button class="btn btn-danger" data-bs-toggle="modal" 
                data-bs-target="#rejectModal<%= product.id %>">
          Reject
        </button>
        <a href="/products/<%= product.id %>" class="btn btn-primary" target="_blank">
          View
        </a>
      </div>
      
      <!-- Reject Modal -->
      <div class="modal fade" id="rejectModal<%= product.id %>">
        <div class="modal-dialog">
          <div class="modal-content">
            <form action="/admin/products/<%= product.id %>/reject" method="POST">
              <div class="modal-header">
                <h5>Reject Product</h5>
              </div>
              <div class="modal-body">
                <label class="form-label">Reason for rejection:</label>
                <textarea name="rejection_reason" class="form-control" required></textarea>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-danger">Confirm Reject</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </main>
  </div>
</div>

<%- include('../../partials/admin-footer') %>