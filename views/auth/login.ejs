<%- include('../partials/header', { user: null }) %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="./style.css">
<style>
  /* Animation for login heading */
  @keyframes fadeSlideIn {
    0% {
      opacity: 0;
      transform: translateX(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-header h4 {
    animation: fadeSlideIn 0.8s ease-out;
  }

  /* Animated sell4anything text */
  .animated-word {
    display: flex;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    gap: 2px;
    margin-top: 40px;
    margin-bottom: 20px;
  }

  .animated-word span {
    display: inline-block;
    opacity: 0;
    transform: translate(
      calc(-100px + 200px * var(--rand-x)),
      calc(-100px + 200px * var(--rand-y))
    ) rotate(calc(-180deg + 360deg * var(--rand-rot)));
    animation: collect 1s forwards;
  }

  /* Define each character's random positions and delays */
  .animated-word span:nth-child(1) { --rand-x: 0.1; --rand-y: 0.9; --rand-rot: 0.2; animation-delay: 0s; }
  .animated-word span:nth-child(2) { --rand-x: 0.4; --rand-y: -0.3; --rand-rot: 0.6; animation-delay: 0.1s; }
  .animated-word span:nth-child(3) { --rand-x: -0.6; --rand-y: 0.7; --rand-rot: 0.9; animation-delay: 0.2s; }
  .animated-word span:nth-child(4) { --rand-x: 0.3; --rand-y: -0.5; --rand-rot: 0.5; animation-delay: 0.3s; }
  .animated-word span:nth-child(5) { --rand-x: -0.4; --rand-y: 0.3; --rand-rot: 0.1; animation-delay: 0.4s; }
  .animated-word span:nth-child(6) { --rand-x: 0.2; --rand-y: -0.7; --rand-rot: 0.3; animation-delay: 0.5s; }
  .animated-word span:nth-child(7) { --rand-x: -0.7; --rand-y: 0.6; --rand-rot: 0.8; animation-delay: 0.6s; }
  .animated-word span:nth-child(8) { --rand-x: 0.6; --rand-y: -0.2; --rand-rot: 0.4; animation-delay: 0.7s; }
  .animated-word span:nth-child(9) { --rand-x: -0.3; --rand-y: 0.2; --rand-rot: 0.6; animation-delay: 0.8s; }
  .animated-word span:nth-child(10) { --rand-x: 0.5; --rand-y: -0.4; --rand-rot: 0.9; animation-delay: 0.9s; }
  .animated-word span:nth-child(11) { --rand-x: -0.5; --rand-y: 0.4; --rand-rot: 0.2; animation-delay: 1s; }
  .animated-word span:nth-child(12) { --rand-x: 0.1; --rand-y: -0.8; --rand-rot: 0.5; animation-delay: 1.1s; }
  .animated-word span:nth-child(13) { --rand-x: -0.2; --rand-y: 0.1; --rand-rot: 0.3; animation-delay: 1.2s; }
  .animated-word span:nth-child(14) { --rand-x: 0.5; --rand-y: -0.4; --rand-rot: 0.9; animation-delay: 1.3s; }

  @keyframes collect {
    to {
      transform: translate(0, 0) rotate(0deg);
      opacity: 1;
    }
  }
  /* main */
  
</style>

<!-- Animated title -->


<!-- Login Card -->
<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="fw-bold">
           <i class="fa-solid fa-right-to-bracket fs-3"></i> Login
          <div class="animated-word mt-2" style="background-color: #254C63; padding: 10px; border-radius: 8px;">
            
  <img src="/uploads/6f37dcac85d254875bb06e283ce84df1-removebg-preview.png" alt="Sell4Anything" class="mt-0" style="width: 50px; height: 50px;">
  <span style="color: #EF990F;">S</span><span style="color: #EF990F;">e</span><span style="color: #EF990F;">l</span><span style="color: #EF990F;">l</span><span style="color: #EF990F;">4</span>
  <span style="color: #EF990F;">A</span><span style="color: #EF990F;">n</span><span style="color: #EF990F;">y</span><span style="color: #EF990F;">t</span><span style="color: #EF990F;">h</span><span style="color: #EF990F;">i</span><span style="color: #EF990F;">n</span><span style="color: #EF990F;">g</span>
</div>
        </h4>
      </div>
      <div class="card-body">
        <% if (error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form action="/auth/login" method="POST">
    
          <div class="mb-3">
            <label for="email" class="form-label fw-bold">Email :</label>
            <input type="email" class="form-control" id="email" name="email" required>
           
          </div>
          <div class="mb-3">
            <label for="password" class="form-label fw-bold">Password :</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <button type="submit" class="btn btn-primary w-25 fw-bold">Login</button>
          <p class="mt-3">Don't have an account? <a href="/auth/register">Register here</a></p>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
